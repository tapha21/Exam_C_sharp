@model ges_commande.Models.entity.Client

@{
   @* Layout= "_Layout"; *@
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Détails du Client</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <div class="bg-white shadow-md rounded-lg p-6">
            <h4 class="text-2xl font-bold text-gray-800 mb-4">Détails du Client</h4>
            <hr class="border-gray-300 mb-4" />
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-6">
                <div>
                    <dt class="text-sm font-medium text-gray-600">
                        @Html.DisplayNameFor(model => model.Solde)
                    </dt>
                    <dd class="text-lg font-semibold text-gray-800">
                        @Html.DisplayFor(model => model.Solde)
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-600">
                        @Html.DisplayNameFor(model => model.Adresse)
                    </dt>
                    <dd class="text-lg font-semibold text-gray-800">
                        @Html.DisplayFor(model => model.Adresse)
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-600">
                        @Html.DisplayNameFor(model => model.User.login)
                    </dt>
                    <dd class="text-lg font-semibold text-gray-800">
                        @Html.DisplayFor(model => model.User.login)
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-600">
                        @Html.DisplayNameFor(model => model.Nom)
                    </dt>
                    <dd class="text-lg font-semibold text-gray-800">
                        @Html.DisplayFor(model => model.Nom)
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-600">
                        @Html.DisplayNameFor(model => model.Prenom)
                    </dt>
                    <dd class="text-lg font-semibold text-gray-800">
                        @Html.DisplayFor(model => model.Prenom)
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-600">
                        @Html.DisplayNameFor(model => model.Telephone)
                    </dt>
                    <dd class="text-lg font-semibold text-gray-800">
                        @Html.DisplayFor(model => model.Telephone)
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-600">
                        @Html.DisplayNameFor(model => model.CreateAt)
                    </dt>
                    <dd class="text-lg font-semibold text-gray-800">
                        @Html.DisplayFor(model => model.CreateAt)
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-600">
                        @Html.DisplayNameFor(model => model.UpdateAt)
                    </dt>
                    <dd class="text-lg font-semibold text-gray-800">
                        @Html.DisplayFor(model => model.UpdateAt)
                    </dd>
                </div>
            </dl>
        </div>
        <div class="flex justify-between items-center mt-6">
            <a href="@Url.Action("Edit", new { id = Model?.Id })" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                Modifier
            </a>
            <a href="@Url.Action("Index")" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                Retour à la liste
            </a>
        </div>
    </div>
</body>
</html>
