@model IEnumerable<ges_commande.Models.entity.User>

@{
   @* Layout= "_Layout"; *@
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto py-8">
        <h1 class="text-2xl font-bold mb-4">Liste des utilisateurs</h1>

        <p class="mb-4">
            <a href="@Url.Action("Create")" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Créer un nouveau</a>
        </p>

        <div class="overflow-x-auto">
            <table class="table-auto w-full bg-white shadow-md rounded border border-gray-200">
                <thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <tr>
                        <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.login)</th>
                        <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.password)</th>
                        <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.role)</th>
                        <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.Nom)</th>
                        <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.Prenom)</th>
                        <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.Telephone)</th>
                        <th class="py-3 px-6 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 text-sm font-light">
@foreach (var item in Model) {
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-left">@Html.DisplayFor(modelItem => item.login)</td>
                        <td class="py-3 px-6 text-left">@Html.DisplayFor(modelItem => item.password)</td>
                        <td class="py-3 px-6 text-left">@Html.DisplayFor(modelItem => item.role)</td>
                        <td class="py-3 px-6 text-left">@Html.DisplayFor(modelItem => item.Nom)</td>
                        <td class="py-3 px-6 text-left">@Html.DisplayFor(modelItem => item.Prenom)</td>
                        <td class="py-3 px-6 text-left">@Html.DisplayFor(modelItem => item.Telephone)</td>
                        <td class="py-3 px-6 text-center">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="text-blue-500 hover:underline">Modifier</a> |
                            <a href="@Url.Action("Details", new { id = item.Id })" class="text-green-500 hover:underline">Détails</a> |
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="text-red-500 hover:underline">Supprimer</a>
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
