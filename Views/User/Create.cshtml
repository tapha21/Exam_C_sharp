@model ges_commande.Models.entity.User

@{
   @* Layout= "_Layout"; *@
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create User</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>

<div class="container py-5">
    <h2 class="text-center mb-4">Create a New User</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="border p-4 shadow rounded">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="login" class="form-control" id="login" placeholder="Enter login" />
                    <label for="login">Login</label>
                    <span asp-validation-for="login" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="password" class="form-control" id="password" placeholder="Enter password" type="password" />
                    <label for="password">Password</label>
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="role" class="form-select" id="role">
                        <option value="">Select a Role</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                        <option value="Client">Client</option>
                    </select>
                    <label for="role">Role</label>
                    <span asp-validation-for="role" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Nom" class="form-control" id="Nom" placeholder="Enter Nom" />
                    <label for="Nom">Nom</label>
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Prenom" class="form-control" id="Prenom" placeholder="Enter Prenom" />
                    <label for="Prenom">Prenom</label>
                    <span asp-validation-for="Prenom" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Telephone" class="form-control" id="Telephone" placeholder="Enter Telephone" />
                    <label for="Telephone">Telephone</label>
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="CreateAt" class="form-control" id="CreateAt" placeholder="Enter CreateAt" type="date" />
                    <label for="CreateAt">CreateAt</label>
                    <span asp-validation-for="CreateAt" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="UpdateAt" class="form-control" id="UpdateAt" placeholder="Enter UpdateAt" type="date" />
                    <label for="UpdateAt">UpdateAt</label>
                    <span asp-validation-for="UpdateAt" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Create User</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-action="MesUser" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
