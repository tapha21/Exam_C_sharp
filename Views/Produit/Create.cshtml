@model ges_commande.Models.entity.Produit

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Créer un Produit</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <div class="bg-white rounded-lg shadow-lg p-6">
            <h4 class="text-2xl font-semibold text-gray-800 mb-6">Créer un Produit</h4>
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                <!-- Image -->
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Image</label>
                    <input type="file" name="image" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                </div>

                <!-- Libellé -->
                <div class="mb-4">
                    <label asp-for="Libelle" class="block text-gray-700 font-medium mb-2">Libellé</label>
                    <input asp-for="Libelle" class="form-input w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Libelle" class="text-red-500 text-sm"></span>
                </div>

                <!-- Prix -->
                <div class="mb-4">
                    <label asp-for="Prix" class="block text-gray-700 font-medium mb-2">Prix</label>
                    <input asp-for="Prix" type="number" step="0.01" class="form-input w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Prix" class="text-red-500 text-sm"></span>
                </div>

                <!-- Quantité -->
                <div class="mb-4">
                    <label asp-for="Quantite" class="block text-gray-700 font-medium mb-2">Quantité</label>
                    <input asp-for="Quantite" type="number" class="form-input w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Quantite" class="text-red-500 text-sm"></span>
                </div>

                <!-- Boutons -->
                <div class="flex items-center justify-between">
                    <input type="submit" value="Créer" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded shadow">
                    <a asp-action="Index" class="text-blue-500 hover:text-blue-700 font-medium">Retour à la liste</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
